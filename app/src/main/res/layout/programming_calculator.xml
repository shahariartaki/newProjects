<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/baseCalculatorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3a86ea"
        android:digits="abcdef1234567890"

        android:text="Programming Calculator"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="36sp"
        android:typeface="sans"/>
        <!--android:paddingBottom="20dp"
        android:paddingTop="20dp"-->


    <Button
        android:id="@+id/inputOneBaseButton"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputTwoBaseButton"
        android:layout_below="@+id/baseCalculatorTitle"
        android:layout_weight="0.03"
        android:padding="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="DEC"
        android:textSize="18sp" />

        <!-- <TextView
            android:text="and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unimportantTextView2"
            android:layout_weight="0.03"
            android:textAlignment="center" />-->

    <Button
        android:id="@+id/inputTwoBaseButton"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/firstInput"
        android:padding="15dp"
        android:paddingBottom="15dp"
        android:text="DEC"
        android:textSize="18sp" />


    <Button
        android:id="@+id/resultBaseButton"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="54dp"
        android:padding="15dp"
        android:paddingBottom="15dp"
        android:text="DEC"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/firstInput"
        android:layout_width="278dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/baseCalculatorTitle"
        android:layout_weight="0.47"
        android:digits="-abcdefABCDEF1234567890 "
        android:hint="Input 1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/secondInput"
        android:layout_width="274dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstInput"
        android:layout_weight="0.47"
        android:digits="-abcdefABCDEF1234567890 "
        android:hint="Input 2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:typeface="sans" />


    <TextView
        android:id="@+id/baseCalcResult"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:layout_weight="0.07"
        android:background="#3a86ea"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/addButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/subtractButton"
        android:layout_gravity="right"
        android:layout_marginStart="18dp"
        android:layout_weight="1"
        android:text="+"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/multiplyButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:text="-"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginBottom="170dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:text="x"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:text="select output which you want?"
        android:textColor="#000"
        android:textStyle="bold" />


</RelativeLayout>